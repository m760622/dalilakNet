@model IEnumerable<dalilak.Models.Product>

@{ ViewData["Title"] = "Index"; }

<h1 class="fadeInLeft pt-3"> Index </h1>


<p>
    <a class="custom-btn btn-deep  pt-1" asp-action="Create">Create New</a>
</p>
<form asp-controller="Products" asp-action="Index">
    <div class="Card" style="min-width: 520px;">
        <div class="CardInner">

            <div class="containerSearch" >

                <div class="Icon" >
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#657789" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8" /><line x1="21" y1="21" x2="16.65" y2="16.65" /></svg>
                </div>

                <div class="InputContainer" >
                    <input type="text" name="search" placeholder="" />
                </div>
                <input class="text-primary" type="submit" value="Search" style="max-width: 120px;"/>
            </div>

        </div>
    </div>


</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                <a class="text-primary" href="tel:@Html.DisplayFor(modelItem => item.Mobile)"> @Html.DisplayFor(modelItem => item.Mobile)</a>
            </td>
            <td>
                <a class="text-primary" href="tel:@Html.DisplayFor(modelItem => item.Telefon)"> @Html.DisplayFor(modelItem => item.Telefon)</a>
            </td>

            <td>
                <a class="btnwav btnwav3 ps-4" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btnwav btnwav4" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btnwav btnwav3" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
