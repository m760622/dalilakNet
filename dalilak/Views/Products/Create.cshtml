@model dalilak.Models.Product

@{ ViewData["Title"] = "Create"; }

<h1 class="fadeInLeft pt-3"> Create Product </h1>

<hr />
<div class="row">
    <div class="col-12">
        <form class="row" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control " />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="Category" class="control-label"></label>

                <select class="form-select" asp-for="Category" aria-label="Default select example">
                    <option selected>choose your Category</option>
                    <option value="Association">Association</option>
                    <option value="Clinic">Clinic</option>
                    <option value="Education">Education</option>
                    <option value="Institution">Institution</option>
                    <option value="Reklam">Reklam</option>
                    <option value="Restaurant">Restaurant</option>
                    <option value="services">services</option>
                    <option value="Store">Store</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="Adress" class="control-label"></label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="Lat" class="control-label"></label>
                <input id="lat" asp-for="Lat" class="form-control" />
                <span asp-validation-for="Lat" class="text-danger"></span>
            </div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="Lon" class="control-label"></label>
                <input id="lon" asp-for="Lon" class="form-control" />
                <span asp-validation-for="Lon" class="text-danger"></span>
            </div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="Web" class="control-label"></label>
                <input asp-for="Web" class="form-control" />
                <span asp-validation-for="Web" class="text-danger"></span>
            </div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="Facebook" class="control-label"></label>
                <input asp-for="Facebook" class="form-control" />
                <span asp-validation-for="Facebook" class="text-danger"></span>
            </div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="Twitter" class="control-label"></label>
                <input asp-for="Twitter" class="form-control" />
                <span asp-validation-for="Twitter" class="text-danger"></span>
            </div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="OpenTime" class="control-label"></label>
                <input asp-for="OpenTime" class="form-control" />
                <span asp-validation-for="OpenTime" class="text-danger"></span>
            </div>
            <div class=" col-lg-4 col-md-6 col-sm-12">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="col-sm-12">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <input class="custom-btn btn-deep" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btnwav btnwav3" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






